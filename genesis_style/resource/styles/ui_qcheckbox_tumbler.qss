.Tumbler {
  background-color: transparent;
  outline:          transparent;
}

.Tumbler::indicator {
  width:  36px;
  height: 16px;
}

/* off */
.Tumbler::indicator:unchecked {
  image: url(:/resource/styles/standard/tumbler/tumbler_off_normal@hdpi.png);
}

.Tumbler::indicator:unchecked:hover {
  image: url(:/resource/styles/standard/tumbler/tumbler_off_hover@hdpi.png);
}

.Tumbler::indicator:unchecked:pressed {
  image: url(:/resource/styles/standard/tumbler/tumbler_off_click@hdpi.png);
}

.Tumbler::indicator:unchecked:focus {
  image: url(:/resource/styles/standard/tumbler/tumbler_off_focus@hdpi.png);
}

.Tumbler::indicator:unchecked:disabled {
  image: url(:/resource/styles/standard/tumbler/tumbler_off_disabled@hdpi.png);
}

/* on */
.Tumbler::indicator:checked {
  image: url(:/resource/styles/standard/tumbler/tumbler_on_normal@hdpi.png);
}

.Tumbler::indicator:checked:hover {
  image: url(:/resource/styles/standard/tumbler/tumbler_on_hover@hdpi.png);
}

.Tumbler::indicator:checked:pressed {
  image: url(:/resource/styles/standard/tumbler/tumbler_on_click@hdpi.png);
}

.Tumbler::indicator:checked:focus {
  image: url(:/resource/styles/standard/tumbler/tumbler_on_focus@hdpi.png);
}

.Tumbler::indicator:checked:disabled {
  image: url(:/resource/styles/standard/tumbler/tumbler_on_disabled@hdpi.png);
}
